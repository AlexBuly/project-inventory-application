<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/header', { categories: locals.categories }) %>

  <h1><%= title %></h1>
  <% if (categories.length === 0) { %>
    <p>No categories found.</p>
  <% } else { %>
    <div class="items-container">
      <% categories.forEach(category => { %>
        <div class="main">
          <h3>Category name: <%= category.categoryname %></h3>
          <br>
          <a class="edit" href="/categories/<%= category.id %>/edit">Edit</a>
          <form action="/categories/<%= category.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Delete this category?');">Delete</button>
          </form>
        </div>
      <% }) %>
      <a class="edit" href="/categories/new">Add New Category</a>
    </div>
  <% } %>
</body>
</html>
